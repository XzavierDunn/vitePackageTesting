{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "target": "es2015",
    "declaration": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015", "dom", "dom.iterable"],

    // "module": "NodeNext",
    // "resolveJsonModule": true,
  },
}